  input:checked + .slider { background-color: var(--line-BL); }
  input:checked + .slider:before { transform: translateX(18px); }

  @keyframes pulse { 0% { opacity: 1; } 50% { opacity: 0.7; } 100% { opacity: 1; } }
  .spinner { border: 3px solid rgba(255,255,255,0.1); border-top: 3px solid var(--line-BL); border-radius: 50%; width: 14px; height: 14px; animation: spin 1s linear infinite; display: inline-block; margin-right: 5px; }
