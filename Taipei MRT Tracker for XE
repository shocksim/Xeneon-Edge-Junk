    </div>

    <div class="setting-group">
      <span class="setting-label">Glass Blur</span>
      <input type="range" min="0" max="40" value="20" oninput="document.documentElement.style.setProperty('--blur-strength', this.value + 'px')">
    </div>

    <div class="setting-group">
      <span class="setting-label">BG Brightness</span>
      <input type="range" min="0" max="150" value="100" oninput="document.documentElement.style.setProperty('--bg-brightness', this.value + '%')">
    </div>

    <div class="setting-group">
      <span class="setting-label">Background Image URL</span>
      <input type="text" placeholder="https://..." onchange="if(this.value) document.getElementById('bg-layer').style.backgroundImage = `url('${this.value}')`">
    </div>

    <hr style="border: 0; border-top: 1px solid rgba(255,255,255,0.1); width: 100%; margin: 5px 0;">
    
    <div class="setting-group">
      <span class="setting-label">TDX Client ID</span>
      <input type="text" id="tdxClientId" placeholder="Paste Client ID here" onchange="checkAuth()">
    </div>
    
    <div class="setting-group">
      <span class="setting-label">TDX Client Secret</span>
      <input type="password" id="tdxClientSecret" placeholder="Paste Client Secret here" onchange="checkAuth()">
    </div>

  </div>

<script>
  // --- Data & State ---
  let currentStationId = 'BL12'; // Default: Taipei Main Stn
  let tdxToken = null;
  let allStations = []; // Will store the fetched list
  
  const LINE_MAP = {
    'BL': { color: 'var(--line-BL)', name: 'Blue Line' },
    'R':  { color: 'var(--line-R)', name: 'Red Line' },
    'G':  { color: 'var(--line-G)', name: 'Green Line' },
    'O':  { color: 'var(--line-O)', name: 'Orange Line' },
    'BR': { color: 'var(--line-BR)', name: 'Brown Line' },
    'Y':  { color: 'var(--line-Y)', name: 'Circular Line' }
  };

  // --- Auth & Init ---
  async function checkAuth() {
    const id = document.getElementById('tdxClientId').value;
    const secret = document.getElementById('tdxClientSecret').value;

    if (id && secret) {
      document.getElementById('live-indicator').innerHTML = '<div class="spinner"></div> CONNECTING...';
      try {
        await getTdxToken(id, secret);
        document.getElementById('live-indicator').innerHTML = '<span style="color: #008659">● LIVE DATA</span>';
        
        // 1. Fetch the FULL station list
        await fetchAllStations(); 
        // 2. Refresh arrivals for the current station
        refreshData();
        
      } catch (e) {
        document.getElementById('live-indicator').innerHTML = '<span style="color: #E3002C">● AUTH FAILED</span>';
        console.error(e);
      }
    }
  }

  async function getTdxToken(id, secret) {
    const params = new URLSearchParams();
    params.append('grant_type', 'client_credentials');
    params.append('client_id', id);
    params.append('client_secret', secret);

    const res = await fetch('https://tdx.transportdata.tw/auth/realms/TDXConnect/protocol/openid-connect/token', {
      method: 'POST',
      headers: { 'Content-Type': 'application/x-www-form-urlencoded' },
      body: params
    });

    if (!res.ok) throw new Error('Auth Failed');
    const data = await res.json();
    tdxToken = data.access_token;
  }

  // --- Fetch Logic ---
  
  // New: Fetch List of ALL Stations
  async function fetchAllStations() {
    if (!tdxToken) return;
    
    const url = `https://tdx.transportdata.tw/api/basic/v2/Rail/Metro/Station/TRTC?$format=JSON`;
    const res = await fetch(url, { headers: { 'Authorization': `Bearer ${tdxToken}` } });
    const data = await res.json();
    
    // Sort and Group
    // We want to group by LineID usually, but raw list is fine if sorted
    allStations = data.map(s => ({
      id: s.StationID,
      en: s.StationName.En,
      zh: s.StationName.Zh_tw,
      line: s.StationID.replace(/[0-9]/g, '') // Extract 'BL', 'R' etc
    })).sort((a, b) => a.line.localeCompare(b.line)); // Sort by line code
    
    populateDropdown(allStations);
  }

  // Populate Dropdown with Full List
  function populateDropdown(stations) {
    const list = document.getElementById('stationOptionsList');
    list.innerHTML = ''; // Clear current
    
    // Helper to get color
    const getC = (code) => (LINE_MAP[code] ? LINE_MAP[code].color : '#999');

    let currentLine = '';

    stations.forEach(s => {
      // Create headers for lines
      if (s.line !== currentLine) {
        currentLine = s.line;
        const lineName = LINE_MAP[currentLine] ? LINE_MAP[currentLine].name : currentLine;
        list.innerHTML += `<div class="option-group-title" style="color:${getC(currentLine)}">${lineName}</div>`;
      }
      
      const el = document.createElement('div');
      el.className = 'option';
      el.onclick = () => selectStation(s.en, s.zh, s.id);
      el.innerHTML = `
        <span class="option-name">${s.en}</span>
        <span class="line-dot" style="background:${getC(s.line)}"></span>
      `;
      list.appendChild(el);
    });
  }

  async function refreshData() {
    const container = document.getElementById('train-container');
    container.innerHTML = '<div style="display:flex; justify-content:center; padding:20px;"><div class="spinner" style="width:30px; height:30px;"></div></div>';

    if (!tdxToken) {
      // Use Mock Data if no token
      setTimeout(() => renderList(mockData), 500);
      return;
    }

    try {
      // Real API Call
      const url = `https://tdx.transportdata.tw/api/basic/v2/Rail/Metro/Station/EstimatedTimeOfArrival/TRTC?$filter=StationID eq '${currentStationId}'&$orderby=EstimateTime asc&$format=JSON`;
      
      const res = await fetch(url, {
        headers: { 'Authorization': `Bearer ${tdxToken}` }
      });
      
      const data = await res.json();
      const processed = data.map(item => {
        const lineCode = item.LineID;
        const seconds = item.EstimateTime;
        const minutes = Math.floor(seconds / 60);
        
        return {
          dest: item.DestinationName.En,
          line: lineCode,
          time: minutes
        };
      });

      // Filter out negative times (trains that just left)
      const upcoming = processed.filter(t => t.time >= 0).slice(0, 5);
      renderList(upcoming);

    } catch (e) {
      console.log("API Error", e);
      container.innerHTML = '<div style="color:rgba(255,255,255,0.7); text-align:center; padding:20px;">Data Error<br><small>Check connection</small></div>';
    }
  }

  // --- Render Logic ---
  function renderList(trains) {
    const container = document.getElementById('train-container');
    container.innerHTML = '';

    if (trains.length === 0) {
      container.innerHTML = '<div style="color:rgba(255,255,255,0.5); text-align:center; padding:40px 0;">No trains approaching</div>';
      return;
    }

    trains.forEach(t => {
      const info = LINE_MAP[t.line] || { color: '#fff', name: 'Metro' };
      
      let rightSide = t.time <= 1 
        ? `<div class="badge" style="background: ${info.color}">Arriving</div>`
        : `<div class="time-group"><div class="time-val">${t.time}</div><div class="time-unit">MIN</div></div>`;
      
      const html = `
        <div class="train-card">
          <div class="line-bar" style="background: ${info.color}"></div>
          <div class="info-group">
            <div class="dest-main">${t.dest}</div>
            <div class="dest-sub">${info.name}</div>
          </div>
          ${rightSide}
        </div>
      `;
      container.innerHTML += html;
    });
  }

  function selectStation(en, zh, id) {
    document.getElementById('display-en').textContent = en;
    document.getElementById('display-zh').textContent = zh;
    currentStationId = id;
    document.getElementById('stationSelectWrapper').classList.remove('open');
    refreshData();
  }
  
  function toggleDropdown() {
    document.getElementById('stationSelectWrapper').classList.toggle('open');
  }

  // Default Mock Data
  const mockData = [
    { dest: 'Dingpu', line: 'BL', time: 1 },
    { dest: 'Nangang', line: 'BL', time: 4 },
    { dest: 'Xiangshan', line: 'R', time: 2 }, 
    { dest: 'Tamsui', line: 'R', time: 7 }
  ];

  // Initial Load
  renderList(mockData);

</script>
</body>
</html>
