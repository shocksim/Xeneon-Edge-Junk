        <div class="custom-options" id="stationOptionsList">
          <div class="option-group-title">Favorites</div>
          <div class="option" onclick="selectStation('Taipei Main Stn.', '台北車站', 'BL12')">
            <span class="option-name">Taipei Main Stn.</span><span class="line-dot" style="background:var(--line-BL)"></span>
          </div>
          <div class="option" onclick="selectStation('Taipei 101', '台北101/世貿', 'R03')">
            <span class="option-name">Taipei 101</span><span class="line-dot" style="background:var(--line-R)"></span>
          </div>
          <div class="option" onclick="selectStation('Ximen', '西門', 'BL11')">
