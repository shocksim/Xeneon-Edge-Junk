            background: linear-gradient(to bottom, rgba(11, 15, 25, 0.6) 0%, rgba(11, 15, 25, 0.98) 100%);
        }

        /* --- Header --- */
        header {
            padding: 24px 6vw;
            display: flex;
            justify-content: space-between;
            align-items: center;
            z-index: 10;
            border-bottom: 1px solid rgba(255,255,255,0.08);
            backdrop-filter: blur(10px);
        }

        h1 {
            font-size: 22px;
            font-weight: 900;
            margin: 0;
            letter-spacing: 0.5px;
            text-transform: uppercase;
            display: flex;
            align-items: center;
            gap: 12px;
            font-style: italic; /* CS2 branding lean */
        }
        
        h1 span { color: var(--t-yellow); }

        .status-badge {
            font-size: 10px;
            background: rgba(93, 121, 174, 0.2);
            color: var(--ct-blue);
            padding: 4px 8px;
            border-radius: 4px;
            font-weight: 700;
            border: 1px solid rgba(93, 121, 174, 0.4);
            text-transform: uppercase;
        }
        
        .status-badge.live {
            background: rgba(222, 155, 53, 0.2);
            color: var(--t-yellow);
            border-color: rgba(222, 155, 53, 0.4);
            animation: pulse 2s infinite;
        }

        /* --- Match List --- */
        #match-list {
            flex-grow: 1;
            overflow-y: auto;
            padding: 20px 6vw 80px 6vw;
            display: flex;
            flex-direction: column;
            gap: 16px;
        }
        #match-list::-webkit-scrollbar { width: 6px; }
        #match-list::-webkit-scrollbar-track { background: transparent; }
        #match-list::-webkit-scrollbar-thumb { background: rgba(255,255,255,0.15); border-radius: 10px; }

        /* --- Match Card --- */
        .match-card {
            display: grid;
            grid-template-columns: 1fr auto 1fr;
            align-items: center;
            background: var(--card-bg);
            border-radius: 4px; /* CS2 UI is sharper/boxier */
            padding: 20px;
            border: 1px solid rgba(255,255,255,0.05);
            backdrop-filter: blur(10px);
            transition: transform 0.2s, background 0.2s;
            position: relative;
            overflow: hidden;
        }
        
        /* Subtle "scanline" effect for CS theme */
        .match-card::before {
            content: '';
            position: absolute;
            top: 0; left: 0; right: 0; height: 2px;
            background: rgba(255,255,255,0.1);
            opacity: 0;
            transition: opacity 0.3s;
        }
        .match-card:hover::before { opacity: 1; }

        .match-card:hover {
            background: rgba(35, 40, 55, 0.9);
            transform: translateY(-2px);
            border-color: rgba(255,255,255,0.15);
        }

        /* Team Columns */
        .team {
            display: flex;
            flex-direction: column;
            align-items: center;
            gap: 12px;
            text-align: center;
            width: 100%;
        }

        .logo-container {
            width: 70px;
            height: 70px;
            display: flex;
            justify-content: center;
            align-items: center;
        }
        
        @media (min-width: 600px) {
            .logo-container { width: 90px; height: 90px; }
        }

        .team-logo {
            width: 100%;
