<div id="map-bg"></div>

<header>
    <h1>CS2 <span>PRO TRACKER</span></h1>
    <div id="status-indicator" class="status-badge">Connecting...</div>
</header>

<div id="match-list"></div>

<div class="attribution">Powered by PandaScore</div>

<script>
    // ==========================================
    // ⚠️ PASTE YOUR KEY HERE
    // ==========================================
    const PANDASCORE_KEY = ''; 
    // ==========================================

    const container = document.getElementById('match-list');
    const bgElement = document.getElementById('map-bg');
    const statusInd = document.getElementById('status-indicator');

    const MAP_IMAGES = [
        'https://static.wikia.nocookie.net/cswikia/images/8/86/CS2_Dust_II_A_Long.jpg',
        'https://static.wikia.nocookie.net/cswikia/images/1/14/De_mirage_CS2_update_A_site.jpg', 
        'https://static.wikia.nocookie.net/cswikia/images/3/3d/CS2_Nuke_Silo_T_Side.jpg'
    ];

    function setRandomMap() {
        const randomMap = MAP_IMAGES[Math.floor(Math.random() * MAP_IMAGES.length)];
        bgElement.style.backgroundImage = `url('${randomMap}')`;
    }

    function renderLogo(url, name) {
        const initials = name ? name.substring(0, 2).toUpperCase() : "CS";
        if (url) {
            return `<img src="${url}" class="team-logo" loading="lazy" onerror="this.parentNode.innerHTML='<div class=\\'team-fallback\\'>${initials}</div>'">`;
        }
        return `<div class="team-fallback">${initials}</div>`;
    }

    async function fetchMatches() {
        if (!PANDASCORE_KEY) {
            container.innerHTML = '<div class="message">API Key missing.</div>';
            return;
        }

        try {
            // FIX: Route through corsproxy.io to bypass browser security
            const targetUrl = `https://api.pandascore.co/csgo/matches?filter[status]=running,upcoming&sort=begin_at&per_page=30&token=${PANDASCORE_KEY}`;
            const proxyUrl = 'https://corsproxy.io/?' + encodeURIComponent(targetUrl);
            
            const res = await fetch(proxyUrl);
            
            if (!res.ok) {
                console.error("API Status:", res.status);
                throw new Error(`API Error: ${res.status}`);
            }

            const data = await res.json();
            renderMatches(data);
            statusInd.textContent = "ONLINE";
            statusInd.classList.add('live');

        } catch (e) {
            console.error("Fetch Error:", e);
            container.innerHTML = `<div class="message">Connection failed.<br>It might be the API key or Proxy.<br><small>${e.message}</small></div>`;
            statusInd.textContent = "ERROR";
        }
    }

    function renderMatches(matches) {
        container.innerHTML = '';

        if (!matches || matches.length === 0) {
            container.innerHTML = '<div class="message">No active or upcoming matches found.</div>';
            return;
        }

        let hasActive = false;

        matches.forEach(match => {
            if (!match?.opponents || match.opponents.length < 2) return;

            const t1 = match.opponents[0]?.opponent || { name: "TBD", image_url: null };
            const t2 = match.opponents[1]?.opponent || { name: "TBD", image_url: null };
            const t1Score = match.results?.[0]?.score ?? 0;
            const t2Score = match.results?.[1]?.score ?? 0;

            const isLive = match.status === "running";
            if (isLive) hasActive = true;
            
            const leagueName = match.league?.name || "Tournament";
            
            let displayTime = "UPCOMING";
            if (match.begin_at) {
                const dateObj = new Date(match.begin_at);
                const timeStr = dateObj.toLocaleTimeString([], {hour: '2-digit', minute:'2-digit'});
                const dateStr = dateObj.toLocaleDateString([], {month: 'short', day: 'numeric'});
                displayTime = isLive ? "LIVE NOW" : `${dateStr} - ${timeStr}`;
            }

            const card = document.createElement('div');
            card.className = "match-card";

            card.innerHTML = `
                <div class="team">
                    <div class="logo-container">${renderLogo(t1.image_url, t1.name)}</div>
                    <div class="team-name">${t1.name}</div>
                </div>

                <div class="versus">
                    <div class="score">
                        <span>${t1Score}</span><span class="separator">:</span><span>${t2Score}</span>
                    </div>
                    <div class="map-name" style="${!isLive ? 'background:rgba(255,255,255,0.1); color:#ccc' : ''}">
                        ${isLive ? 'LIVE' : 'UPCOMING'}
                    </div>
                    <div class="time-elapsed">${leagueName}</div>
                    <div class="time-elapsed" style="margin-top:2px; color:#666">${displayTime}</div>
                </div>

                <div class="team">
                    <div class="logo-container">${renderLogo(t2.image_url, t2.name)}</div>
                    <div class="team-name">${t2.name}</div>
                </div>
            `;
            container.appendChild(card);
        });
        
        if (hasActive) {
            statusInd.textContent = "LIVE MATCHES";
            statusInd.classList.add('live');
        } else {
            statusInd.textContent = "SCHEDULE";
            statusInd.classList.remove('live');
        }
    }

    setRandomMap();
    fetchMatches();
    setInterval(fetchMatches, 60000);

</script>
</body>
</html>
