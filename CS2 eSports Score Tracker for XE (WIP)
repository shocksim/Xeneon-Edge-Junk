            color: var(--ct-blue);
        }

        /* Winner Indicators */
        .match-card.finished .team-logo { opacity: 0.4; filter: grayscale(100%); }
        .match-card.finished .team-name { opacity: 0.5; }
        
        .match-card.finished .winner .team-logo { opacity: 1; filter: none; transform: scale(1.1); }
        .match-card.finished .winner .team-name { opacity: 1; color: var(--text-main); }

        .message { text-align: center; margin-top: 50px; color: var(--text-sub); font-size: 14px; line-height: 1.6; }
        .message a { color: var(--t-yellow); text-decoration: none; border-bottom: 1px dotted var(--t-yellow); }
        
        @keyframes pulse { 0% { opacity: 1; } 50% { opacity: 0.5; } 100% { opacity: 1; } }
        .attribution { position: fixed; bottom: 10px; right: 15px; font-size: 10px; color: rgba(255,255,255,0.3); pointer-events: none; }
