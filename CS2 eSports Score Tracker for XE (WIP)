<body>

<div id="map-bg"></div>

<header>
    <h1>CS2 <span>PRO TRACKER</span></h1>
    <div id="status-indicator" class="status-badge">Initializing</div>
</header>

<div id="match-list">
    </div>

<div class="attribution">Powered by PandaScore</div>

<script>
    // ==========================================
    // ⚠️ CONFIGURATION: API KEY REQUIRED
    // ==========================================
    // 1. Go to https://pandascore.co/
    // 2. Sign up for a free account
    // 3. Paste your Access Token below inside the quotes
    // ==========================================
    const PANDASCORE_KEY = ''; 
    // ==========================================

    const container = document.getElementById('match-list');
    const bgElement = document.getElementById('map-bg');
    const statusInd = document.getElementById('status-indicator');

    // --- High-Res Map Backgrounds ---
    // These are public URLs for CS2 map loading screens
    const MAP_IMAGES = [
        'https://static.wikia.nocookie.net/cswikia/images/8/86/CS2_Dust_II_A_Long.jpg', // Dust 2
        'https://static.wikia.nocookie.net/cswikia/images/1/14/De_mirage_CS2_update_A_site.jpg', // Mirage
        'https://static.wikia.nocookie.net/cswikia/images/3/3d/CS2_Nuke_Silo_T_Side.jpg', // Nuke
        'https://static.wikia.nocookie.net/cswikia/images/d/d3/CS2_Inferno_Banana.jpg', // Inferno
        'https://static.wikia.nocookie.net/cswikia/images/1/1f/CS2_Overpass_Park.jpg'  // Overpass
    ];

    // --- Demo Data (Used if no Key provided) ---
    const DEMO_DATA = [
        {
            status: "running",
            league: { name: "IEM Katowice" },
            opponents: [
                { opponent: { name: "Natus Vincere", acronym: "NAVI", image_url: "https://img-cdn.hltv.org/teamlogo/4608.svg?ixlib=java-2.1.0&s=d51670987d603a493c4c95f190e38699" } },
                { opponent: { name: "FaZe Clan", acronym: "FAZE", image_url: "https://img-cdn.hltv.org/teamlogo/6667.svg?ixlib=java-2.1.0&s=99a7f3411cb3555543d043d052d92147" } }
            ],
            results: [ { score: 11 }, { score: 9 } ],
            match_type: "best_of_3"
        },
        {
            status: "finished",
            winner_id: 1,
            league: { name: "Blast Premier" },
            opponents: [
                { opponent: { id: 1, name: "Team Vitality", acronym: "VIT", image_url: "https://img-cdn.hltv.org/teamlogo/9565.svg?ixlib=java-2.1.0&s=2183d24254b010c2847a9446d338f0c3" } },
                { opponent: { id: 2, name: "G2 Esports", acronym: "G2", image_url: "https://img-cdn.hltv.org/teamlogo/5995.svg?ixlib=java-2.1.0&s=9d538e3e46c76a596644f8021877d54b" } }
            ],
            results: [ { score: 2 }, { score: 1 } ], // Map score for finished
            match_type: "best_of_3"
        }
    ];

    // --- Helpers ---
    function setRandomMap() {
        const randomMap = MAP_IMAGES[Math.floor(Math.random() * MAP_IMAGES.length)];
        bgElement.style.backgroundImage = `url('${randomMap}')`;
    }

    function getInitials(name) {
        if (!name) return "CS";
        return name.substring(0, 2).toUpperCase();
    }

    function renderLogo(url, name) {
        if (url) {
            return `<img src="${url}" class="team-logo" loading="lazy" 
                onerror="this.style.display='none'; this.parentNode.innerHTML='<div class=\\'team-fallback\\'>${getInitials(name)}</div>'">`;
        }
        return `<div class="team-fallback">${getInitials(name)}</div>`;
    }

    // --- Main Logic ---
    async function fetchMatches() {
        // If no key, show Demo Mode
        if (!PANDASCORE_KEY) {
            console.log("No API Key. Showing Demo Data.");
            statusInd.textContent = "DEMO MODE";
            renderMatches(DEMO_DATA);
            
            // Append message
            const msg = document.createElement('div');
            msg.className = 'message';
            msg.innerHTML = `
                <p><strong>Widget Ready!</strong><br>
                Add your free PandaScore API Key in the code to see live data.<br>
                <a href="https://pandascore.co/" target="_blank">Get Free Key</a></p>
            `;
            container.appendChild(msg);
            return;
        }

        statusInd.textContent = "Updating...";
        statusInd.classList.add('live');

        try {
            // Fetch Running and Upcoming matches
            // We use 'csgo' endpoint (PandaScore combines CS:GO and CS2 under this slug)
            const res = await fetch(`https://api.pandascore.co/csgo/matches/running?sort=begin_at&token=${PANDASCORE_KEY}`);
            if (!res.ok) throw new Error("API Error");
            const data = await res.json();
            
            renderMatches(data);
            statusInd.textContent = "LIVE DATA";

        } catch (e) {
            console.error(e);
            container.innerHTML = '<div class="message">Error connecting to PandaScore.<br>Check your API Key.</div>';
            statusInd.textContent = "ERROR";
            statusInd.classList.remove('live');
        }
    }

    function renderMatches(matches) {
        container.innerHTML = '';

        if (matches.length === 0) {
            container.innerHTML = '<div class="message">No active matches right now.<br>Check back later!</div>';
            return;
        }

        matches.forEach(match => {
            // Safety: Ensure we have 2 opponents
            if (match.opponents.length < 2) return;

            const t1 = match.opponents[0].opponent;
            const t2 = match.opponents[1].opponent;
            const t1Score = match.results[0].score;
            const t2Score = match.results[1].score;

            const isLive = match.status === "running";
            const leagueName = match.league.name;

            // Determine classes
            let cardClass = "match-card";
            if (!isLive) cardClass += " finished";

            // If finished, who won?
            let winnerClass = "";
            if (!isLive && match.winner_id) {
                if (match.winner_id === t1.id) cardClass += " t1-won"; 
                // We handle the visual logic via CSS classes on the specific team div
            }

            const card = document.createElement('div');
            card.className = cardClass;

            card.innerHTML = `
                <div class="team ${match.winner_id === t1.id ? 'winner' : ''}">
                    <div class="logo-container">${renderLogo(t1.image_url, t1.name)}</div>
                    <div class="team-name">${t1.name}</div>
                </div>

                <div class="versus">
                    <div class="score">
                        <span>${t1Score}</span><span class="separator">:</span><span>${t2Score}</span>
                    </div>
                    <div class="map-name">${isLive ? 'LIVE' : 'FINAL'}</div>
                    <div class="time-elapsed">${leagueName}</div>
                </div>

                <div class="team ${match.winner_id === t2.id ? 'winner' : ''}">
                    <div class="logo-container">${renderLogo(t2.image_url, t2.name)}</div>
                    <div class="team-name">${t2.name}</div>
                </div>
            `;
            container.appendChild(card);
        });
    }

    // Init
    setRandomMap();
    fetchMatches();
    setInterval(fetchMatches, 60000);

</script>
</body>
</html>
