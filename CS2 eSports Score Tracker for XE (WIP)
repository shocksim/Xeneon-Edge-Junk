        }

        body {
            margin: 0; padding: 0; background-color: var(--bg-color); color: var(--text-main);
            font-family: var(--font-stack); overflow: hidden; height: 100vh;
            display: flex; flex-direction: column; position: relative;
        }

        #map-bg {
            position: absolute; top: 0; left: 0; width: 100%; height: 100%;
            background-size: cover; background-position: center; opacity: 0.3;
            filter: blur(3px) grayscale(10%); z-index: -1; transition: opacity 1s ease;
        }
        #map-bg::after {
            content: ''; position: absolute; top: 0; left: 0; right: 0; bottom: 0;
            background: linear-gradient(to bottom, rgba(11, 15, 25, 0.6) 0%, rgba(11, 15, 25, 0.98) 100%);
        }

        header {
            padding: 24px 6vw; display: flex; justify-content: space-between; align-items: center;
            z-index: 10; border-bottom: 1px solid rgba(255,255,255,0.08); backdrop-filter: blur(10px);
        }

        h1 {
            font-size: 20px; font-weight: 900; margin: 0; text-transform: uppercase;
            display: flex; align-items: center; gap: 8px; font-style: italic;
        }
        h1 span { color: var(--t-yellow); }

        .status-badge {
            font-size: 10px; padding: 4px 8px; border-radius: 4px; font-weight: 700;
            border: 1px solid rgba(93, 121, 174, 0.4); color: var(--ct-blue); text-transform: uppercase;
        }
        .status-badge.live {
            background: rgba(222, 155, 53, 0.2); color: var(--t-yellow);
