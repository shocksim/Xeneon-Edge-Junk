<body>

    <header>
        <h2>BART <span style="font-weight:normal; font-size:0.8em; color:#888;">Live</span></h2>
        <select id="station-select">
            <option value="" disabled selected>Loading...</option>
        </select>
    </header>

    <div id="map-container">
        <div id="map"></div>
    </div>

    <div id="train-list">
        <div class="status-msg">Loading station data...</div>
    </div>

    <script src="https://unpkg.com/leaflet@1.9.4/dist/leaflet.js"
     integrity="sha256-20nQCchB9co0qIjJZRGuk2/Z9VM+kNiyxNV1lvTlZBo="
     crossorigin=""></script>

<script>
    const API_KEY = 'MW9S-E7SL-26DU-VV8V'; 
    const STATION_SELECT = document.getElementById('station-select');
    const TRAIN_LIST = document.getElementById('train-list');
    
    // State
    let currentStation = localStorage.getItem('bart_fav_station') || 'EMBR';
    let stationData = {}; // Stores lat/long for all stations
    let map, currentMarker;

    // --- 1. Initialize Map ---
    function initMap() {
        // Initialize map centered on SF initially (will update quickly)
        map = L.map('map', { zoomControl: false }).setView([37.7749, -122.4194], 13);

        // Add Dark Matter Tiles (CartoDB)
        L.tileLayer('https://{s}.basemaps.cartocdn.com/dark_all/{z}/{x}/{y}{r}.png', {
            attribution: '&copy; OpenStreetMap &copy; CARTO',
            subdomains: 'abcd',
            maxZoom: 19
        }).addTo(map);
    }

    // --- 2. Fetch Stations & Coordinates ---
    async function fetchStations() {
        try {
            const response = await fetch(`https://api.bart.gov/api/stn.aspx?cmd=stns&key=${API_KEY}&json=y`);
            const data = await response.json();
            const stations = data.root.stations.station;

            STATION_SELECT.innerHTML = '';
            
            stations.forEach(stn => {
                // Save coordinates for map lookup later
                stationData[stn.abbr] = {
                    name: stn.name,
                    lat: parseFloat(stn.gtfs_latitude),
                    lng: parseFloat(stn.gtfs_longitude)
                };

                const option = document.createElement('option');
                option.value = stn.abbr;
                option.textContent = stn.name;
                if(stn.abbr === currentStation) option.selected = true;
                STATION_SELECT.appendChild(option);
            });

            // Trigger initial load
            updateStationView();
            updateDepartures();

        } catch (error) {
            console.error('Error fetching stations:', error);
            STATION_SELECT.innerHTML = '<option>Error</option>';
        }
    }

    // --- 3. Update Map View ---
    function updateStationView() {
        if (!stationData[currentStation]) return;

        const coords = stationData[currentStation];
        const latLng = [coords.lat, coords.lng];

        // Move map
        map.setView(latLng, 15);

        // Remove old marker if exists
        if (currentMarker) map.removeLayer(currentMarker);

        // Add new marker (Custom simple circle marker)
        currentMarker = L.circleMarker(latLng, {
            color: '#00a8e8',
            fillColor: '#00a8e8',
            fillOpacity: 0.8,
            radius: 8
        }).addTo(map);
    }

    // --- 4. Fetch Real-Time Departures ---
    async function updateDepartures() {
        if (!currentStation) return;
        
        try {
            const response = await fetch(`https://api.bart.gov/api/etd.aspx?cmd=etd&orig=${currentStation}&key=${API_KEY}&json=y`);
            const data = await response.json();
            
            if (!data.root.station[0].etd) {
                TRAIN_LIST.innerHTML = '<div class="status-msg">No departures scheduled.</div>';
                return;
            }

            renderDepartures(data.root.station[0].etd);

        } catch (error) {
            console.error('Error fetching ETD:', error);
        }
    }

    function renderDepartures(etdList) {
        TRAIN_LIST.innerHTML = ''; 

        etdList.forEach(dest => {
            const estimates = Array.isArray(dest.estimate) ? dest.estimate : [dest.estimate];
            const nextTrain = estimates[0];
            const followingTrains = estimates.slice(1).map(e => e.minutes).join(', ');
            const lineColor = nextTrain.hexcolor;

            const card = document.createElement('div');
            card.className = 'train-card';
            card.style.borderLeftColor = lineColor;

            card.innerHTML = `
                <div class="train-info">
                    <span class="train-dest">${dest.destination}</span>
                    <span class="train-len">${nextTrain.length} car â€¢ Plat ${nextTrain.platform}</span>
                </div>
                <div class="train-times">
                    <div class="primary-time">${nextTrain.minutes === 'Leaving' ? 'Now' : nextTrain.minutes + ' min'}</div>
                    <div class="next-times">${followingTrains ? followingTrains + ' min' : ''}</div>
                </div>
            `;
            TRAIN_LIST.appendChild(card);
        });
    }

    // --- Event Listeners ---
    STATION_SELECT.addEventListener('change', (e) => {
        currentStation = e.target.value;
        localStorage.setItem('bart_fav_station', currentStation);
        TRAIN_LIST.innerHTML = '<div class="status-msg">Loading...</div>';
        
        updateStationView(); // Move map immediately
        updateDepartures();  // Then fetch trains
    });

    // --- Init ---
    initMap();
    fetchStations();
    setInterval(updateDepartures, 15000);

</script>
</body>
</html>
