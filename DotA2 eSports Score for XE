<div id="hero-bg"></div>

<header>
    <h1>DOTA 2 <span>PRO CIRCUIT</span></h1>
    <div class="live-badge">LIVE FEED</div>
</header>

<div id="match-list">
    <div class="message">Connecting to OpenDota...</div>
</div>

<div class="attribution">Powered by OpenDota</div>

<script>
    const MATCHES_URL = "https://api.opendota.com/api/proMatches";
    const TEAMS_URL = "https://api.opendota.com/api/teams";
    const HERO_STATS_URL = "https://api.opendota.com/api/heroStats";
    
    const container = document.getElementById('match-list');
    const bgElement = document.getElementById('hero-bg');

    let teamLogoMap = {};

    // Helper: Generate Initials for Fallback
    function getInitials(name) {
        if (!name) return "?";
        return name.substring(0, 2).toUpperCase();
    }

    // Helper: Force HTTPS on image URLs
    function secureUrl(url) {
        if (!url) return null;
        return url.replace('http://', 'https://');
    }

    // 1. Set Random Hero Background
    async function setHeroBackground() {
        try {
            const res = await fetch(HERO_STATS_URL);
            const heroes = await res.json();
            const randomHero = heroes[Math.floor(Math.random() * heroes.length)];
            const heroName = randomHero.name.replace('npc_dota_hero_', '');
            const bgUrl = `https://cdn.cloudflare.steamstatic.com/apps/dota2/images/dota_react/heroes/${heroName}.png`;
            bgElement.style.backgroundImage = `url('${bgUrl}')`;
        } catch (e) { console.warn("Background load failed", e); }
    }

    // 2. Build the Logo Dictionary
    async function fetchTeamData() {
        try {
            const res = await fetch(TEAMS_URL);
            const teams = await res.json();
            
            teams.forEach(team => {
                if(team.logo_url) {
                    teamLogoMap[team.team_id] = secureUrl(team.logo_url);
                }
            });
            fetchMatches();
        } catch (e) {
            console.error("Team data failed", e);
            fetchMatches();
        }
    }

    // 3. Fetch Matches
    async function fetchMatches() {
        try {
            const response = await fetch(MATCHES_URL);
            const matches = await response.json();
            renderMatches(matches);
        } catch (error) {
            console.error(error);
            container.innerHTML = '<div class="message">Error connecting to OpenDota API.</div>';
        }
    }

    function renderMatches(matches) {
        container.innerHTML = '';
        const validMatches = matches.filter(m => m.radiant_name && m.dire_name);

        if (validMatches.length === 0) {
            container.innerHTML = '<div class="message">No recent pro matches found.</div>';
            return;
        }

        validMatches.forEach(match => {
            const radiantWon = match.radiant_win;
            let winClass = radiantWon ? 'radiant-won' : 'dire-won';
            
            const date = new Date(match.start_time * 1000);
            const dateString = date.toLocaleDateString([], { month: 'short', day: 'numeric' });

            const radLogo = teamLogoMap[match.radiant_team_id];
            const direLogo = teamLogoMap[match.dire_team_id];

            // Render function for logo OR fallback
            const renderLogo = (url, name) => {
                if (url) {
                    // Try to load image, if it fails (onerror), replace parent innerHTML with fallback
                    return `<img src="${url}" class="team-logo" loading="lazy" 
                        onerror="this.style.display='none'; this.parentNode.innerHTML='<div class=\\'team-fallback\\'>${getInitials(name)}</div>'">`;
                } else {
                    return `<div class="team-fallback">${getInitials(name)}</div>`;
                }
            };

            const card = document.createElement('div');
            card.className = `match-card ${winClass}`;

            card.innerHTML = `
                <div class="team radiant">
                    <div class="logo-container">
                        ${renderLogo(radLogo, match.radiant_name)}
                    </div>
                    <div class="team-name">${match.radiant_name}</div>
                </div>

                <div class="versus">
                    <div class="score">
                        <span class="radiant-score">${match.radiant_score}</span><span class="separator">:</span><span class="dire-score">${match.dire_score}</span>
                    </div>
                    <div class="time-elapsed">${dateString}</div>
                    ${radiantWon 
                        ? '<div class="winner-crown" style="color:#3dd175">Radiant Win</div>' 
                        : '<div class="winner-crown" style="color:#e63939">Dire Win</div>'}
                </div>

                <div class="team dire">
                    <div class="logo-container">
                        ${renderLogo(direLogo, match.dire_name)}
                    </div>
                    <div class="team-name">${match.dire_name}</div>
                </div>
            `;

            container.appendChild(card);
        });
    }

    setHeroBackground();
    fetchTeamData();
    setInterval(fetchMatches, 60000);

</script>
</body>
</html>
