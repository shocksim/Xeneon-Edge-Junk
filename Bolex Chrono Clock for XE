    <script>
        // --- INITIALIZATION ---
        const ticksGroup = document.getElementById('minute-ticks');
        for (let i = 0; i < 60; i++) {
            const angle = (i * 6) * (Math.PI / 180);
            const isHour = i % 5 === 0;
            const length = isHour ? 15 : 8;
            const width = isHour ? 3 : 1;
            const color = isHour ? '#c0c0c0' : '#666';
            
            const x1 = Math.sin(angle) * (180 - length);
            const y1 = -Math.cos(angle) * (180 - length);
            const x2 = Math.sin(angle) * 175;
            const y2 = -Math.cos(angle) * 175;

            const line = document.createElementNS("http://www.w3.org/2000/svg", "line");
            line.setAttribute("x1", x1);
            line.setAttribute("y1", y1);
            line.setAttribute("x2", x2);
            line.setAttribute("y2", y2);
            line.setAttribute("stroke", color);
            line.setAttribute("stroke-width", width);
            ticksGroup.appendChild(line);
        }

        // --- CLOCK LOGIC ---
        function updateClock() {
            const now = new Date();
            
            const ms = now.getMilliseconds();
            const s = now.getSeconds();
            const m = now.getMinutes();
            const h = now.getHours();
            const date = now.getDate();
            const month = now.getMonth();
            
            // Hands Calculation
            const sDeg = (s * 6) + (ms * 0.006);
            const mDeg = (m * 6) + (s * 0.1);
            const hDeg = ((h % 12) * 30) + (m * 0.5);

            document.getElementById('second-hand').setAttribute("transform", `rotate(${sDeg})`);
            document.getElementById('minute-hand').setAttribute("transform", `rotate(${mDeg})`);
            document.getElementById('hour-hand').setAttribute("transform", `rotate(${hDeg})`);

            const monthDeg = month * 30;
            document.getElementById('month-hand-group').setAttribute("transform", `rotate(${monthDeg})`);

            document.getElementById('date-text').textContent = date;
            
            requestAnimationFrame(updateClock);
        }

        updateClock();
    </script>
</body>
